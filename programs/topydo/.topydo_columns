[All]
title = All
sortexpr = asc:priority
show_all = 1
filterexpr = -@work -@tinkering -@community -@recurring
groupexpr = context

[Today]
title = Today
sortexpr = desc:importance
show_all = 0
filterexpr = due:<=today
groupexpr = context

[Tinkering]
title = Tinkering
sortexpr = asc:priority
show_all = 0
filterexpr = @tinkering
groupexpr = project

[Work]
title = Work
sortexpr = asc:priority
show_all = 0
filterexpr = @work
groupexpr = project

[Triage]
title = Triage
sortexpr = desc:importance
show_all = 0
filterexpr = (>=F) @work
groupexpr = desc:priority
